@* we can use a different model *@

@model LoginUser

<div class="d-flex">
    <div class="text-right">
        <h3 class="display-4">Log In</h3>

        @* <div style="float:right;"> *@
        <div class="col-lg-12">
            <form action="/login" method="post">
                <div class="text-center">
                    <div class="form-group">
                        <label asp-for="LoginEmail"></label>
                        <input asp-for="LoginEmail" class="form-control">
                        <span asp-validation-for="LoginEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoginPassword"></label>
                        <input asp-for="LoginPassword" class="form-control">
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    </div>
                </div>
                <button class="btn-btn-primary">Log In</button>
            </form>
        </div>
    </div>
</div>