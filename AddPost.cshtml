@model Organization
<div class="d-flex">
    <div class="text-left">

        <h3 class="display-4">Add Fundraiser</h3>

        @* <div style="float:left;"> *@
        <div class="col-lg-12">
            <form action="/addPost" method="post">
                <div class="form-group">
                    <label asp-for="OrganizationName">Name of the Organization</label>
                    <input asp-for="OrganizationName" class="form-control">
                    <span asp-validation-for="OrganizationName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrganizationDescription">Organization Purpose</label>
                    <input asp-for="OrganizationDescription" class="form-control">
                    <span asp-validation-for="OrganizationDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostDescription"> Description of the fundraiser</label>
                    <input asp-for="PostDescription" class="form-control">
                    <span asp-validation-for="PostDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Goal">Goal to reach (in $)</label>
                    <input asp-for="Goal" class="form-control">
                    <span asp-validation-for="Goal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode"></label>
                    <input asp-for="ZipCode" class="form-control">
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <button class="btn-btn-primary">Submit</button>
            </form>
            <form action="/home" method="get">
                <button>Cancel</button>
            </form>
        </div>
    </div>
    @* <div class="col-lg-6">
        <partial name="LoginFormPartial"></partial>
    </div> *@
</div>